{
	"name": "Handlebars",
	"description": "Handlebars Visual Studio Code",
	"version": "0.4.1",
	"publisher": "andrejunges",
	"icon": "images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/andrejunges/vscode-handlebars"
	},
	"galleryBanner": {
		"color": "#0F6378",
		"theme": "dark"
	},
	"categories": [
		"Languages",
		"Snippets"
	],
	"engines": {
		"vscode": "^0.10.1",
		"bun": ">=1.0.0"
	},
	"main": "./out/extension.js",
	"activationEvents": [
		"onLanguage:handlebars"
	],
	"scripts": {
		"compile": "bun run tsc -p ./",
		"watch": "bun run tsc -watch -p ./"
	},
	"dependencies": {
		"typescript": "^5.0.0"
	},
	"devDependencies": {
		"@types/vscode": "^1.80.0",
		"@types/node": "^20.0.0"
	},
	"contributes": {
		"configuration": {
			"title": "Handlebars IntelliSense",
			"properties": {
				"handlebars.intellisense.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable IntelliSense for Handlebars files"
				},
				"handlebars.intellisense.cacheEnabled": {
					"type": "boolean",
					"default": true,
					"description": "Cache parsed TypeScript interfaces"
				}
			}
		},
		"languages": [
			{
				"id": "handlebars",
				"aliases": [
					"Handlebars",
					"handlebars"
				],
				"extensions": [
					".handlebars",
					".hbr",
					".hbs",
					".tpl"
				],
				"configuration": "./handlebars.configuration.json"
			}
		],
		"grammars": [
			{
				"language": "handlebars",
				"scopeName": "text.html.handlebars",
				"path": "./syntaxes/handlebars.tmLanguage"
			}
		],
		"snippets": [
			{
				"language": "handlebars",
				"path": "./snippets/snippets.json"
			}
		]
	}
}
