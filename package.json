{
	"name": "Handlebars",
	"description": "Handlebars Visual Studio Code",
	"version": "0.4.1",
	"publisher": "andrejunges",
	"icon": "images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/andrejunges/vscode-handlebars"
	},
	"galleryBanner": {
		"color": "#0F6378",
		"theme": "dark"
	},
	"categories": [
		"Languages",
		"Snippets"
	],
	"engines": {
		"vscode": "^0.10.1",
		"bun": ">=1.0.0"
	},
	"contributes": {
		"languages": [
			{
				"id": "handlebars",
				"aliases": [
					"Handlebars",
					"handlebars"
				],
				"extensions": [
					".handlebars",
					".hbr",
					".hbs",
					".tpl"
				],
				"configuration": "./handlebars.configuration.json"
			}
		],
		"grammars": [
			{
				"language": "handlebars",
				"scopeName": "text.html.handlebars",
				"path": "./syntaxes/handlebars.tmLanguage"
			}
		],
		"snippets": [
			{
				"language": "handlebars",
				"path": "./snippets/snippets.json"
			}
		]
	}
}
